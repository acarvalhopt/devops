# create new
dn: cn=config
changetype: modify
replace: olcServerID
# specify uniq ID number on each server
olcServerID: 0

dn: olcDatabase={2}hdb,cn=config
changetype: modify
add: olcSyncRepl
olcSyncRepl: rid=001
  provider=ldap://{{ inventory_hostname_short }} 
  bindmethod=simple
  binddn={{ binddn }}
  credentials={{ credentials | b64decode }}
  searchbase={{ searchbase }}
  scope=sub
  schemachecking=on
  type=refreshAndPersist
  retry="30 5 300 3"
  interval=00:00:05:00
olcSyncRepl: rid=002
  {% for item in groups[inventory_host_group] %}{% if hostvars[item].inventory_hostname_short != inventory_hostname_short %}
  provider=ldap://{{ hostvars[item].inventory_hostname_short }} 
  bindmethod=simple
  {% endif %}{% endfor %}
  binddn={{ binddn }}
  credentials={{ credentials | b64decode }}
  searchbase={{ searchbase }}
  scope=sub
  schemachecking=on
  type=refreshAndPersist
  retry="30 5 300 3"
  interval=00:00:05:00
-
add: olcMirrorMode
olcMirrorMode: TRUE
